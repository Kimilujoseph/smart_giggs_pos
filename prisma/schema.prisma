generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CommissionPayment {
  id                                             Int                                  @id @default(autoincrement())
  sellerId                                       Int
  amountPaid                                     Decimal                              @db.Decimal(10, 2)
  status                                         String?                              @db.VarChar(100)
  paymentDate                                    DateTime
  periodStartDate                                DateTime
  periodEndDate                                  DateTime
  processedById                                  Int
  actors_CommissionPayment_processedByIdToactors actors                               @relation("CommissionPayment_processedByIdToactors", fields: [processedById], references: [id])
  actors_CommissionPayment_sellerIdToactors      actors                               @relation("CommissionPayment_sellerIdToactors", fields: [sellerId], references: [id])
  CommissionPaymentsOnAccessorySales             CommissionPaymentsOnAccessorySales[]
  CommissionPaymentsOnMobileSales                CommissionPaymentsOnMobileSales[]

  @@index([processedById])
  @@index([sellerId])
}

model CommissionPaymentsOnAccessorySales {
  accessorySaleId     Int
  commissionPaymentId Int
  assignedAt          DateTime          @default(now())
  assignedBy          String
  accessorysales      accessorysales    @relation(fields: [accessorySaleId], references: [id])
  CommissionPayment   CommissionPayment @relation(fields: [commissionPaymentId], references: [id])

  @@id([commissionPaymentId, accessorySaleId])
  @@index([accessorySaleId], map: "CommissionPaymentsOnAccessorySales_accessorySaleId_fkey")
}

model CommissionPaymentsOnMobileSales {
  mobileSaleId        Int
  commissionPaymentId Int
  assignedAt          DateTime          @default(now())
  assignedBy          String
  CommissionPayment   CommissionPayment @relation(fields: [commissionPaymentId], references: [id])
  mobilesales         mobilesales       @relation(fields: [mobileSaleId], references: [id])

  @@id([commissionPaymentId, mobileSaleId])
  @@index([mobileSaleId], map: "CommissionPaymentsOnMobileSales_mobileSaleId_fkey")
}

model Customer {
  id             Int              @id @default(autoincrement())
  name           String
  email          String?          @unique
  phoneNumber    String           @unique
  createdAt      DateTime         @default(now())
  Return         Return[]
  accessorysales accessorysales[]
  mobilesales    mobilesales[]
}

model Expense {
  id            Int              @id @default(autoincrement())
  description   String
  amount        Decimal          @db.Decimal(10, 2)
  category      Expense_category
  expenseDate   DateTime
  shopId        Int?
  processedById Int
  actors        actors           @relation(fields: [processedById], references: [id])
  shops         shops?           @relation(fields: [shopId], references: [id])

  @@index([processedById])
  @@index([shopId])
}

model Financer {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  contactName    String?
  phone          String?
  email          String?          @unique
  address        String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @db.DateTime(0)
  accessorysales accessorysales[]
  mobilesales    mobilesales[]
  SellerPerformanceKPI SellerPerformanceKPI[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int?
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  actors    actors?  @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Payment {
  id              Int              @id @default(autoincrement())
  amount          Decimal          @db.Decimal(10, 2)
  paymentMethod   String
  status          String           @default("completed")
  transactionId   String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime?        @default(now()) @db.DateTime(0)
  mobileSaleId    Int?
  accessorySaleId Int?
  mobileSale      mobilesales?     @relation(fields: [mobileSaleId], references: [id])
  accessorySale   accessorysales?  @relation(fields: [accessorySaleId], references: [id])

  @@index([mobileSaleId])
  @@index([accessorySaleId])
}

model Return {
  id              Int             @id @default(autoincrement())
  mobileSaleId    Int?
  accessorySaleId Int?
  customerId      Int
  restock         Boolean?        @default(true)
  refundAmount    Decimal?        @db.Decimal(10, 0)
  reason          String
  returnedAt      DateTime        @default(now())
  processedBy     Int
  accessorysales  accessorysales? @relation(fields: [accessorySaleId], references: [id])
  Customer        Customer        @relation(fields: [customerId], references: [id])
  mobilesales     mobilesales?    @relation(fields: [mobileSaleId], references: [id])
  actors          actors          @relation(fields: [processedBy], references: [id])

  @@index([accessorySaleId], map: "Return_accessorySaleId_fkey")
  @@index([customerId])
  @@index([mobileSaleId], map: "Return_mobileSaleId_fkey")
  @@index([processedBy])
}

model SalaryPayment {
  id                                         Int      @id @default(autoincrement())
  employeeId                                 Int
  amount                                     Decimal  @db.Decimal(10, 2)
  status                                     String?  @db.VarChar(100)
  paymentDate                                DateTime
  payPeriodMonth                             Int
  payPeriodYear                              Int
  processedById                              Int
  actors_SalaryPayment_employeeIdToactors    actors   @relation("SalaryPayment_employeeIdToactors", fields: [employeeId], references: [id])
  actors_SalaryPayment_processedByIdToactors actors   @relation("SalaryPayment_processedByIdToactors", fields: [processedById], references: [id])

  @@index([employeeId])
  @@index([processedById])
}

model Supplier {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  contactName String?
  phone       String?
  email       String?       @unique
  address     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @db.DateTime(0)
  accessories accessories[]
  mobiles     mobiles[]
}

model accessories {
  id                       Int                        @id @unique(map: "_id_UNIQUE") @default(autoincrement()) @map("_id")
  batchNumber              String                     @unique(map: "itemName_UNIQUE") @db.VarChar(255)
  productType              String?                    @db.VarChar(255)
  CategoryId               Int
  faultyItems              Int?                       @default(0) @db.UnsignedInt
  barcodePath              String?                    @db.VarChar(255)
  createdAt                DateTime?                  @default(now()) @db.DateTime(0)
  availableStock           Int?                       @default(0) @db.UnsignedInt
  stockStatus              String?                    @default("available") @db.VarChar(255)
  color                    String?                    @default("white") @db.VarChar(255)
  productCost              Int?
  commission               Int?
  discount                 Int?
  updatedAt                DateTime?                  @default(now()) @db.DateTime(0)
  paymentStatus            String                     @default("PAID")
  supplierId               Int?
  Supplier                 Supplier?                  @relation(fields: [supplierId], references: [id])
  categories               categories                 @relation(fields: [CategoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessories_1")
  accessoryHistory         accessoryHistory[]
  accessoryItems           accessoryItems[]
  accessorysales           accessorysales[]
  accessorytransferhistory accessorytransferhistory[]

  @@index([supplierId], map: "accessories_supplierId_fkey")
  @@index([CategoryId], map: "fk_accessories_1_idx")
}

model accessoryHistory {
  id          Int         @id @unique(map: "_id_UNIQUE") @default(autoincrement()) @map("_id")
  addedBy     Int
  createdAt   DateTime?   @default(now()) @db.DateTime(0)
  shopId      Int
  type        String      @default("new stock") @db.VarChar(45)
  quantity    Int         @db.UnsignedInt
  productID   Int
  accessories accessories @relation(fields: [productID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_acccessoryHistory_accessory__1")
  shops       shops       @relation(fields: [shopId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessoryHistory_1")
  actors      actors      @relation(fields: [addedBy], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessoryHistory_2")

  @@index([productID], map: "fk_acccessoryHistory_1_idx")
  @@index([shopId], map: "fk_accessoryHistory_1_idx")
  @@index([addedBy], map: "fk_accessoryHistory_2_idx")
}

model accessoryItems {
  id            Int         @id @unique(map: "_id_UNIQUE") @default(autoincrement()) @map("_id")
  accessoryID   Int
  shopID        Int
  status        String      @db.VarChar(45)
  createdAt     DateTime?   @default(now()) @db.DateTime(0)
  quantity      Int?        @db.UnsignedInt
  productStatus String?     @default("new stock") @db.VarChar(255)
  updatedAt     DateTime?   @default(now()) @db.DateTime(0)
  transferId    Int?
  confirmedBy   Int?
  shops         shops       @relation(fields: [shopID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessoryItems_1")
  accessories   accessories @relation(fields: [accessoryID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessoryItems_2")
  actors        actors?     @relation(fields: [confirmedBy], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_confirmedBy_actor_2")

  @@index([shopID], map: "fk_accessoryItems_1_idx")
  @@index([accessoryID], map: "fk_accessoryItems_2_idx")
  @@index([confirmedBy], map: "fk_confirmedBy_actor_2")
}

model accessorysales {
  id                                 Int                                  @id @unique(map: "_id_UNIQUE") @default(autoincrement()) @map("_id")
  productID                          Int
  shopID                             Int
  sellerId                           Int
  soldPrice                          Decimal                              @db.Decimal(10, 2)
  status                             String?                              @default("COMPLETED") @db.VarChar(100)
  profit                             Int                                  @db.UnsignedInt
  createdAt                          DateTime?                            @default(now()) @db.DateTime(0)
  commisssionStatus                  accessorysales_commisssionStatus?
  quantity                           Int?                                 @default(0)
  commission                         Int?                                 @default(0)
  categoryId                         Int?
  financeStatus                      String?                              @default("paid") @db.VarChar(255)
  financeAmount                      Int?                                 @default(0)
  customerId                         Int?
  financerId                         Int?
  commissionPaid                     Int?                                 @default(0)
  CommissionPaymentsOnAccessorySales CommissionPaymentsOnAccessorySales[]
  Return                             Return[]
  Customer                           Customer?                            @relation(fields: [customerId], references: [id])
  Financer                           Financer?                            @relation(fields: [financerId], references: [id])
  accessories                        accessories                          @relation(fields: [productID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessorysales_1")
  actors                             actors                               @relation(fields: [sellerId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessorysales_2")
  shops                              shops                                @relation(fields: [shopID], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessorysales_3")
  categories                         categories?                          @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_accessorysales_category")
  payments                           Payment[]

  @@index([customerId])
  @@index([financerId])
  @@index([productID], map: "fk_accessorysales_1_idx")
  @@index([sellerId], map: "fk_accessorysales_2_idx")
  @@index([shopID], map: "fk_accessorysales_3_idx")
  @@index([categoryId], map: "fk_accessorysales_category")
  @@index([createdAt], map: "idx_sales_created")
}

model accessorytransferhistory {
